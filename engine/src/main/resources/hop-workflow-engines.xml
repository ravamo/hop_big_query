<?xml version="1.0" encoding="UTF-8"?>
<hop-workflow-engines>

  <hop-workflow-engine id="Local">
    <description>Hop local workflow engine</description>
    <tooltip>Executes your workflow locally</tooltip>
    <classname>org.apache.hop.workflow.engines.local.LocalWorkflowEngine</classname>
  </hop-workflow-engine>

  <hop-workflow-engine id="Remote">
    <description>Hop remote workflow engine</description>
    <tooltip>Executes your workflow on a remote hop server</tooltip>
    <classname>org.apache.hop.workflow.engines.remote.RemoteWorkflowEngine</classname>
  </hop-workflow-engine>

</hop-workflow-engines>
